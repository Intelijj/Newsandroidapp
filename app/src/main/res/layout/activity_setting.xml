<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="#f5f5f5"
    tools:context=".Setting">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NewsStand"
        android:gravity="center"
        android:fontFamily="@font/chomsky"
        android:textStyle="bold"
        android:textSize="26sp"
        android:id="@+id/news"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/news"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:fontFamily="@font/courier"
        android:text="Top Sources"
        android:layout_below="@+id/news"
        android:layout_marginTop="19dp"
        android:textSize="17sp"
        android:textColor="#1D212D"
        android:textStyle="bold"
        android:id="@+id/popularArticles"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/popularArticles"
        android:id="@+id/scrollbarpopular"
        android:layout_marginTop="19dp"
        android:layout_height="150dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scroll"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="129dp"
                android:id="@+id/BBC"
                android:background="@drawable/fox" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="109dp"
                android:id="@+id/CNN"
                android:layout_marginLeft="20dp"
                android:background="@drawable/cnn"/>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="89dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/cricket" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="109dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/aajtak" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="129dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/Fox"
                android:background="@drawable/bbc" />

        </LinearLayout>
    </HorizontalScrollView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3sp"
                    android:layout_marginTop="4dp"
                    android:background="#964B00"
                    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/courier"
        android:id="@+id/j1"
        android:background="@color/white"
        android:layout_below="@+id/scrollbarpopular"
        android:layout_marginTop="9dp"
        android:textSize="17sp"
        android:textStyle="bold"

        android:text="News in Your Country"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/j1"
        android:id="@+id/county"
        android:layout_marginTop="19dp"
        android:background="@color/white"
        android:layout_height="200dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/usa"
            android:orientation="vertical">
            <ImageView
                android:layout_width="250dp"
                android:layout_height="159dp"
                android:background="@drawable/usa"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="United States of America"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/england"
            android:orientation="vertical">
            <ImageView
                android:layout_width="250dp"
                android:layout_height="159dp"
                android:background="@drawable/great"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Great Britain"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/france"
            android:orientation="vertical">
            <ImageView
                android:layout_width="250dp"
                android:layout_height="159dp"
                android:background="@drawable/fra"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="France"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aus"
            android:orientation="vertical">
            <ImageView
                android:layout_width="250dp"
                android:layout_height="159dp"
                android:background="@drawable/aus"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Australia"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/russia"
            android:orientation="vertical">
            <ImageView
                android:layout_width="250dp"
                android:layout_height="159dp"
                android:background="@drawable/rus"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Russia"
                android:gravity="center"/>
        </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="5dp"
                android:background="#964B00"
                />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/courier"
        android:id="@+id/j2"
        android:textSize="17sp"
        android:textStyle="bold"
        android:text="What's going around the World"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="2000dp"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/j2"
        android:id="@+id/recycleview"
        tools:listitem="@layout/item_news" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>