<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:id="@+id/indexArticles">

        <TextView
            android:id="@+id/pagetitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/chomsky"
            android:text="The NewsSpot"
            android:textColor="#1D212D"
            android:textSize="29sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/savebutton"
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_menu_24"
            app:tint="#000000" />

        <ImageButton
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_arrow_back_ios_24"
            app:tint="#000000" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/indexArticles"
        android:gravity="left"
        android:textSize="17sp"
        android:layout_marginLeft="12dp"
        android:fontFamily="@font/courier"
        android:text="Pick of the Day"
        android:textStyle="bold"
        android:textColor="#0536C8"
        android:id="@+id/pickofDay"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pickofDay"
        android:layout_above="@+id/bottomNavi"
        android:id="@+id/recycleview"
        tools:listitem="@layout/item_news" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal"
        android:id="@+id/bottomNavi"
        android:layout_marginLeft="29dp"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home"
            android:orientation="vertical">
            <ImageView
                android:layout_width="35sp"
                android:layout_height="28sp"
                android:src="@drawable/baseline_home_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:textStyle="bold"
                android:textSize="13dp"
                android:text="India"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:id="@+id/trending"
            android:orientation="vertical">
            <ImageView
                android:layout_width="35sp"
                android:layout_height="28sp"
                android:layout_marginLeft="14dp"
                android:src="@drawable/baseline_trending_up_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:textSize="13dp"
                android:text="Trending"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:id="@+id/business"
            android:orientation="vertical">
            <ImageView
                android:layout_width="35sp"
                android:layout_height="28sp"
                android:layout_marginLeft="11dp"
                android:src="@drawable/baseline_chrome_reader_mode_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:textSize="13dp"
                android:textStyle="bold"
                android:text="Special"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:id="@+id/world"
            android:orientation="vertical">
            <ImageView
                android:layout_width="35sp"
                android:layout_height="28sp"
                android:layout_marginLeft="14dp"
                android:src="@drawable/baseline_outlined_flag_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:textSize="13dp"
                android:text="World"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:id="@+id/sports"
            android:orientation="vertical">
            <ImageView
                android:layout_width="35sp"
                android:layout_height="28sp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/baseline_sports_cricket_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:textStyle="bold"
                android:textSize="13dp"
                android:text="Sports"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>